<%- model_class = OrgRole -%>
<div class="page-header">
  <h1><%=t '.title', :default => OrgRole %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @org_role.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:manager) %></dt>
      <dd><pre class="prettyprint"><%= @org_role.manager %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              org_roles_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_org_role_path(@org_role), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              org_role_path(@org_role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

